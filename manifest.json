{
  "manifest_version": 3,
  "name": "Study Buddy AI",
  "description": "Summarize, Rewrite, Proofread & Translate text via built-in AI",
  "version": "1.0",
  "permissions": [
    "storage",
    "contextMenus",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.png"
  },
  "icons": {
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "ai.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}